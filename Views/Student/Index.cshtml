@model List<StudentWebApp.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Students</h1>
    <div style="position: relative;">
        <a href="@Url.Action("Create", "Student")" style="position: absolute; right: 125px; top: -45px; font-size: 24px;">
            <i class="bi bi-plus-circle icon-black"></i>
        </a>
    </div>

    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Major</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Major</td>
                    <td style="white-space: nowrap;">
                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })" style="margin-right: 8px; text-decoration: none;">
                            <i class="bi bi-pencil-square icon-black" style="font-size: 20px;"></i>
                        </a>
                        <button class="btn btn-link p-0" style="border: none; background: none; color: black;" data-bs-toggle="modal" data-bs-target="#deleteModal" onclick="setStudentIdToDelete(@student.Id)">
                            <i class="bi bi-trash icon-black" style="font-size: 20px;"></i>
                        </button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">Confirm Deletion</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to delete this student?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" asp-action="DeleteStudent" method="post">
                    <input type="hidden" name="id" id="studentIdToDelete" />
                    <button type="submit" class="btn btn-danger">Delete</button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    function setStudentIdToDelete(studentId) {
        document.getElementById('studentIdToDelete').value = studentId;
    }
</script>
