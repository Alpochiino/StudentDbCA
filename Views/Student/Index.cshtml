@model List<StudentWebApp.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <h2>Students</h2>
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Major</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Major</td>
                    <td>
                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })">
                            <i class="bi bi-pencil-square icon-black" style="font-size: 20px;"></i>
                        </a>
                    </td>
                </tr>   
            }
        </tbody>
    </table>
</div>
