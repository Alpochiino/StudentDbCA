@model List<StudentWebApp.Models.Student>

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Students</h1>
    <div style="position: relative;">
        <a href="@Url.Action("Create", "Student")" style="position: absolute; right: 125px; top: -45px; font-size: 24px;">
            <i class="bi bi-plus-circle icon-black"></i>
        </a>
    </div>
    
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Age</th>
                <th>Major</th>
                <th>Actions</th> 
            </tr>
        </thead>
        <tbody>
            @foreach (var student in Model)
            {
                <tr>
                    <td>@student.Name</td>
                    <td>@student.Age</td>
                    <td>@student.Major</td>
                    <td style="white-space: nowrap;">
                        <a href="@Url.Action("Edit", "Student", new { id = student.Id })" style="margin-right: 8px; text-decoration: none;">
                            <i class="bi bi-pencil-square icon-black" style="font-size: 20px;"></i>
                        </a>
                        <form asp-action="DeleteStudent" method="post" style="display: inline; margin: 0; padding: 0;" onsubmit="return confirm('Are you sure you want to delete this student?');">
                            <input type="hidden" name="id" value="@student.Id" />
                            <button type="submit" style="border: none; background: none; cursor: pointer; padding: 0; margin: 0;" title="Delete">
                                <i class="bi bi-trash icon-black" style="font-size: 20px; color: black;"></i>
                            </button>
                        </form>
                    </td>
                </tr>   
            }
        </tbody>
    </table>
</div>
