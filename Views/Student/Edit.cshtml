@model StudentWebApp.Models.Student

<h1>Edit Student @Model.Name</h1>

<form asp-action="EditStudent" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <div>
        <label for="Name">Name:</label>
        <input type="text" name="Name" value="@Model.Name" required />
    </div>
    <div>
        <label for="Age">Age:</label>
        <input type="number" name="Age" value="@Model.Age" required />
    </div>
    <div>
        <label for="Major">Major:</label>
        <input type="text" name="Major" value="@Model.Major" required />
    </div>
    <button type="submit">Update</button>
</form>
